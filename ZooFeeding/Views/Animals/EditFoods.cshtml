@model ZooFeeding.Models.Animal

@{
    ViewBag.Title = "EditFoods";
}

<h2>Edit Food (Coming Soon)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Food</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <label class="control-label col-md-2">Food</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="FoodName" name="FoodName" type="text" value="DryCatFood" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" disabled="disabled" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Animals", "Index")|@Html.ActionLink("Back to Foods", "ViewFoods")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}